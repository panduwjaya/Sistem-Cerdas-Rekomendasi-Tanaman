<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_reset_password"
    tools:context=".ui.primary.other.ChangePasswordFragment">

    <TextView
        android:id="@+id/enter_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="29dp"
        android:layout_marginTop="60dp"
        android:text="Change Your Password"
        android:textColor="@color/green"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reset_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="29dp"
        android:layout_marginTop="4dp"
        android:text="Please Enter New Password"
        android:textColor="@color/green"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/enter_mail" />

    <EditText
        android:id="@+id/change_ed_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="29dp"
        android:layout_marginTop="19dp"
        android:hint="@string/new_password"
        android:inputType="textEmailAddress"
        app:errorEnabled="true"
        app:layout_constraintBottom_toTopOf="@id/confirm_ed_change"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reset_text" />

    <EditText
        android:id="@+id/confirm_ed_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="29dp"
        android:layout_marginTop="19dp"
        android:hint="@string/text_confirm_password"
        android:inputType="textEmailAddress"
        app:errorEnabled="true"
        app:layout_constraintBottom_toTopOf="@id/btn_change_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reset_text" />

    <Button
        android:id="@+id/btn_change_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="29dp"
        android:backgroundTint="@color/green"
        android:padding="12dp"
        android:text="CHANGE"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confirm_ed_change"
        app:layout_constraintWidth_default="spread"
        tools:layout_editor_absoluteY="319dp" />


</androidx.constraintlayout.widget.ConstraintLayout>