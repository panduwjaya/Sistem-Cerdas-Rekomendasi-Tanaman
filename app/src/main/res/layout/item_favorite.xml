<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="0dp"
    android:paddingEnd="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/itemFavorite"
        android:layout_width="100dp"
        android:layout_height="130dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/kaktus"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_plant_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/itemFavorite"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:enabled="true"
        android:gravity="center"
        android:layout_marginTop="6dp"
        android:paddingBottom="20dp"
        app:layout_constraintEnd_toEndOf="@+id/itemFavorite"
        app:layout_constraintStart_toStartOf="@+id/itemFavorite"
        app:layout_constraintTop_toBottomOf="@+id/itemFavorite"
        tools:text="@string/favorite_description" />

</androidx.constraintlayout.widget.ConstraintLayout>